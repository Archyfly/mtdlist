<%= form_with model: [current_user, @project, @task] do |f| %>
  <%= render 'shared/errors', resource: @task %>
  <h3>Create new task:</h3>
  <div class="mb-3 mt-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :task_name %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :task_name, class: 'form-control' %>
    </div>

    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>

    <div class="col-sm-2 col-form-label">
      <%= f.label :status %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :status, class: 'form-control' %>
    </div>

    <div class="col-sm-2 col-form-label">
      <%= f.label :priority %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :priority, class: 'form-control' %>
    </div>

    <div class="col-sm-2 col-form-label">
      <%= f.label :deadline %>
    </div>
    <div class="col-sm-10">
      <%= f.date_field :deadline, class: 'form-control' %>
    </div>

    <%= f.submit 'Submit project!', class: 'btn btn-primary mt-3' %>

  </div>
<% end %>


