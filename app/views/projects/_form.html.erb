<%= form_with model: [@user, @project] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="col-sm-2 col-form-label">
      <%= f.label :description %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <%= f.submit 'Submit project!', class: 'btn btn-primary mt-3' %>

  </div>
<% end %>


